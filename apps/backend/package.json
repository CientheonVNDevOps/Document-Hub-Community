{
  "name": "backend",
  "version": "1.0.0",
  "description": "NestJS backend for note-taking app",
  "main": "dist/main.js",
  "scripts": {
    "build": "bunx nest build",
    "build:no-cache": "bunx nest build --webpack-config webpack.config.js",
    "format": "bunx prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_NO_WARNINGS=1 bunx nest start",
    "start:dev": "NODE_NO_WARNINGS=1 bunx nest start --watch",
    "start:debug": "bunx nest start --debug --watch",
    "start:prod": "node start-server.js",
    "dev": "NODE_NO_WARNINGS=1 bunx nest start --watch",
    "dev:no-cache": "bunx nest start --watch --webpack-config webpack.config.js",
    "lint": "bunx eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bunx jest",
    "test:watch": "bunx jest --watch",
    "test:cov": "bunx jest --coverage",
    "test:debug": "bunx node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "bunx jest --config ./test/jest-e2e.json",
    "clean": "rm -rf dist node_modules/.cache",
    "clean:all": "rm -rf dist node_modules/.cache node_modules"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.20",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^5.2.0",
    "@supabase/supabase-js": "^2.76.1",
    "@types/nodemailer": "^6.4.21",
    "@upstash/redis": "^1.35.6",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "nodemailer": "^6.10.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.14",
    "resend": "^6.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.20",
    "@types/express": "^4.17.24",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.23",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/bcrypt": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
